extends layout

block content
  div.row
    div(id='draggable-blocks', class='widget large-4 columns')
      h3.widget-title Blocks
      #main
      #statement
      #function
      #for
      #if
      #else
    div(id='droppable-space', class='widget large-4 columns')
      h3.widget-title Code
        button(id="run", class="button tiny success radius") Run
    div(class='large-4 columns')
      div(id="input", class="widget row")
        h3.widget-title Input
        textarea(placeholder="Input data to be computed by your program")
      div(id="output", class="widget row")
        h3.widget-title Output
        div
          p(class="subheader clue") Results & Errors
    - var html =  '<div class="draggable ui-widget-content code-block"><h3 class="code-block-title"><div class="row"><div class="large-2 columns"><%= block_name %></div><div class="large-8 columns"><input class="code-block-params" type="text" /></div><div class="large-2 columns"><button data-dropdown="actions_list" class="block_actions button dropdown tiny secondary radius"></button></div></div></h3><div class="droppable"></div></div>'
    script(type="text/template", id="block_template")
      | !{html}
  ul(id="actions_list", class="f-dropdown")
    li
      a(href="#") Delete
    li
      a(href="#") Help
