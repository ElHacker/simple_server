extends layout

block content
  div.row
    div(id='draggable-blocks', class='widget large-4 columns')
      h3.widget-title Blocks
      #main
      #function
      #for
      #if
      #else
    div(id='droppable-space', class='widget large-4 columns')
      h3.widget-title Code
        button(id="run", class="button tiny success radius") Run
    div(class='large-4 columns')
      div(id="input", class="widget row")
        h3.widget-title Input
        div
          p(class="subheader clue") Input data to compute by your program
      div(id="output", class="widget row")
        h3.widget-title Output
        div
          p(class="subheader clue") Results & Errors
    - var html =  '<div class="draggable ui-widget-content code-block"><h3 class="code-block-title"><%= block_name %><button data-dropdown="actions_list" class="block_actions button dropdown tiny secondary radius"></button></h3><div class="droppable"></div></div>'
    script(type="text/template", id="block_template")
      | !{html}
  ul(id="actions_list", class="f-dropdown")
    li
      a(href="#") Delete
    li
      a(href="#") Help
